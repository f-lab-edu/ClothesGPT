// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Question {
  id         String              @id @default(uuid())
  question   String
  tag        Json?
  choices    Choice[]
  choiceType ChoiceComponentType
}

model Choice {
  id         String     @id @default(uuid())
  imageSrc   String?
  color      String?
  value      Json?
  tag        Json?
  inputType  InputType?
  questionId String
  question   Question   @relation(fields: [questionId], references: [id])
}

enum ChoiceComponentType {
  Chat
  Button
  Image
  Color
  Input
}

enum InputType {
  Number
}
