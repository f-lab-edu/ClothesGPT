generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider          = "postgresql"
  url               = env("POSTGRES_PRISMA_URL")
  directUrl         = env("POSTGRES_URL_NON_POOLING")
  shadowDatabaseUrl = env("POSTGRES_URL_NON_POOLING")
}

model Question {
  id         String              @id @default(uuid())
  question   String
  tag        Json?
  choiceType ChoiceComponentType
  choices    Choice[]
}

model Choice {
  id         String     @id @default(uuid())
  imageSrc   String?
  color      String?
  value      Json?
  tag        Json?
  questionId String
  inputType  InputType?
  question   Question   @relation(fields: [questionId], references: [id])
}

enum ChoiceComponentType {
  Chat
  Button
  Image
  Color
  Input
}

enum InputType {
  Number
}
